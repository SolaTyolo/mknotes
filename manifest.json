{
    "name": "mknotes",
    "version": "0.2",
    "description": "survive seven days markdown notes",
    "permissions": ["https://*/*","http://*/*","storage"],
    "minimum_chrome_version": "21",
    "background": {  
        "scripts": ["assets/js/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "assets/images/notes128.png"
    },
    "icons": {
        "16": "assets/images/notes16.png",
        "32": "assets/images/notes32.png",
        "48": "assets/images/notes48.png",
        "128": "assets/images/notes128.png"
    },
    "manifest_version": 2
}